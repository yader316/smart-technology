extends pages/includes/catalogo
append config
  -pageTitle = 'Catalogo Cam'
prepend styles
  link(rel="stylesheet", href="css/swiper.min.css")
block content
  +scrollTop   
  header.header-container.container.d-flex
    figure.header-container__img-container
      img(src="img/logo-smart.png", alt="").header-container__img
    nav.header-container__navigator.d-flex
      +menu
      +menu-responsive
  section.camInfo-container.container
    +catalogoConCincoImg('cam 360 grado','$ 50 dolar','Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.','wyze_cam_front.jpg','wyze_cam_front_2.jpg','wyze_cam_mounted.jpg','wyze_cam_sit_1.jpg','wyze_cam_sit_2.jpg')
  section.specification-container.d-flex-direction.container
    h1.specification-container__title specifications
    .specification-container__information
      +accordion('1080p Full HD','Longitud focal de 2.8 mm. Lente gran angular de 110º. Sensor CMOS de 1 / 2.9 ". 1920 × 1080 (1080p) full HD. Imágenes tan claras que no se perderá nada.')
        block contentAccordion
          .accordion__imgCompare-container.container
            +imgCompare('img720p.png','img1080p.png')  
block script
  script(src="js/swiper.min.js")
  script(src="js/sliderCatalogo.js")
  script(src="js/menuResponsive.js")
  script(src="js/accordion.js")
  script(src="js/scrollTop.js")
  script(src="js/imgCompare.js")